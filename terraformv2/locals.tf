  prefix = "bedrock"
  suffix = random_id.this.hex

  # ----------------------------------------------------------------------------------------------
  # S3
  # ----------------------------------------------------------------------------------------------
  bucket_name_artifact = "${local.prefix}-artifact-${local.suffix}"
}

